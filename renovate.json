{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		":semanticCommitTypeAll(chore)",
		"schedule:automergeWeekends",
		"schedule:monthly"
	],
	"labels": [
		"dependencies"
	],
	"npm": {
		"lockFileMaintenance": {
			"automerge": false,
			"commitMessageAction": "yarn.lock updates",
			"enabled": true,
			"extends": [
				"schedule:quarterly"
			],
			"groupName": "yarn.lock updates"
		},
		"packageRules": [
			{
				"automerge": true,
				"groupName": "devDependencies (non-major)",
				"matchCurrentVersion": "!/^0/",
				"matchDepTypes": [
					"devDependencies"
				],
				"matchUpdateTypes": [
					"patch",
					"minor"
				]
			},
			{
				"matchCurrentVersion": "!/^0/",
				"matchUpdateTypes": [
					"minor"
				]
			},
			{
				"enabled": false,
				"matchDepTypes": [
					"engines"
				]
			}
		],
		"rangeStrategy": "bump"
	}
}